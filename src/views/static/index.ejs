<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>

      <!-- Navigation -->
      <% include ./partials/navbar.ejs %>


      <!-- Page Content -->
      <main class="container">
          <% include ../static/partials/messages.ejs %>

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h1 class="display-3">Welcome to Grocery List</h1>
          <p class="lead">An application for users to share their grocery list.</p>
          <% if(currentUser) { %> 
          <a href="/grocery" class="btn btn-primary btn-lg">View List</a>
          <% } else { %>
         <a href="/users/sign_up" class="btn btn-primary btn-lg">Sign up</a>
         <% } %>
        </header>

        <!-- Page Features -->
        <section class="row text-center">

          <section class="col-lg-4">
            <h4 class="card-title">Post</h4>
            <p class="card-text">Add items that you need to get</p>
          </section>

          <section class="col-lg-4">
            <h4 class="card-title">Mark</h4>
            <p class="card-text">Mark items that are already taken care of</p>
          </section>

          <section class="col-lg-4">
            <h4 class="card-title">Share</h4>
            <p class="card-text">Share your list with friends or family</p>
          </section>

        </section>
        <!-- /.row -->

      </main>
      <!-- /.container -->

      <% include ./partials/baseScripts.ejs %>

    </body>
</html>